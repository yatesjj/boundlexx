{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Boundlexx: Create Game Objects (Core Data - All Languages)",
            "type": "shell",
            "command": "source <(cat ${workspaceFolder}/.local.env | grep -v '^#' | sed -E 's|^(.+)=(.*)$|export \\1=\\2|g') && python ${workspaceFolder}/manage.py create_game_objects --core",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Boundlexx: Create Game Objects (Core Data - English Only)",
            "type": "shell",
            "command": "source <(cat ${workspaceFolder}/.local.env | grep -v '^#' | sed -E 's|^(.+)=(.*)$|export \\1=\\2|g') && python ${workspaceFolder}/manage.py create_game_objects --core --english-only",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Boundlexx: Create Game Objects (Skills Only)",
            "type": "shell",
            "command": "source <(cat ${workspaceFolder}/.local.env | grep -v '^#' | sed -E 's|^(.+)=(.*)$|export \\1=\\2|g') && python ${workspaceFolder}/manage.py create_game_objects --skill",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Boundlexx: Create Game Objects (Recipes Only)",
            "type": "shell",
            "command": "source <(cat ${workspaceFolder}/.local.env | grep -v '^#' | sed -E 's|^(.+)=(.*)$|export \\1=\\2|g') && python ${workspaceFolder}/manage.py create_game_objects --recipe",
            "group": "build",
            "problemMatcher": []
        },
        // Remove this invalid compound task from the tasks array
        {
            "label": "Boundlexx: Update Requirements",
            "type": "shell",
            "command": "pip-compile ${workspaceFolder}/requirements/in/base.in ${workspaceFolder}/requirements/in/dev.in -o ${workspaceFolder}/requirements/dev.txt --upgrade && pip-compile ${workspaceFolder}/requirements/in/base.in ${workspaceFolder}/requirements/in/production.in -o ${workspaceFolder}/requirements/production.txt --upgrade",
            "problemMatcher": []
        },
        {
            "label": "Boundlexx: Install Requirements",
            "type": "shell",
            "command": "pip install -r ${workspaceFolder}/requirements/dev.txt",
            "problemMatcher": []
        },
        {
            "label": "Boundlexx: Manage",
            "type": "shell",
            "command": "source <(cat ${workspaceFolder}/.local.env | grep -v '^#' | sed -E 's|^(.+)=(.*)$|export \\1=\\2|g') && python ${workspaceFolder}/manage.py ${input:commandName}",
            "problemMatcher": []
        },
        {
            "label": "Boundlexx: Migrate Database",
            "type": "shell",
            "command": "source <(cat ${workspaceFolder}/.local.env | grep -v '^#' | sed -E 's|^(.+)=(.*)$|export \\1=\\2|g') && python ${workspaceFolder}/manage.py migrate ${input:appName}",
            "problemMatcher": []
        },
        {
            "label": "Boundlexx: Make Migrations",
            "type": "shell",
            "command": "source <(cat ${workspaceFolder}/.local.env | grep -v '^#' | sed -E 's|^(.+)=(.*)$|export \\1=\\2|g') && python ${workspaceFolder}/manage.py makemigrations ${input:appName}",
            "problemMatcher": []
        },
        {
            "label": "Boundlexx: Ingest Game Data",
            "type": "shell",
            "command": "source <(cat ${workspaceFolder}/.local.env | grep -v '^#' | sed -E 's|^(.+)=(.*)$|export \\1=\\2|g') && python ${workspaceFolder}/manage.py ingest_game_data 249.4.0",
            "problemMatcher": []
        },
        {
            "label": "Boundlexx: Create Game Objects (LEGACY, DO NOT USE)",
            "type": "shell",
            "command": "source <(cat ${workspaceFolder}/.local.env | grep -v '^#' | sed -E 's|^(.+)=(.*)$|export \\1=\\2|g') && python ${workspaceFolder}/manage.py create_game_objects --skill --recipe",
            "problemMatcher": []
        },
        {
            "label": "Boundlexx: Fast Create Game Objects (Core + Skills + Recipes - English Only)",
            "type": "shell",
            "command": "echo 'Fast Setup: Core Data (English) → Skills → Recipes'",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "Boundlexx: Create Game Objects (Core Data - English Only)",
                "Boundlexx: Create Game Objects (Skills Only)",
                "Boundlexx: Create Game Objects (Recipes Only)"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "Boundlexx: Create Game Objects (Core + Skills + Recipes - All Languages)",
            "type": "shell",
            "command": "echo 'Starting All Objects: Core Data → Skills → Recipes'",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "Boundlexx: Create Game Objects (Core Data - All Languages)",
                "Boundlexx: Create Game Objects (Skills Only)",
                "Boundlexx: Create Game Objects (Recipes Only)"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "Boundlexx: Complete Setup (Ingest + Core + Skills + Recipes - All Languages)",
            "type": "shell",
            "command": "echo 'Complete setup: Ingest Game Data → Core Data → Skills → Recipes'",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Boundlexx: Ingest Game Data",
                "Boundlexx: Create Game Objects (Core + Skills + Recipes - All Languages)"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "Boundlexx: Fast Complete Setup (Ingest + Core + Skills + Recipes - English Only)",
            "type": "shell",
            "command": "echo 'Fast complete setup: Ingest Game Data → Core Data (English Only) → Skills → Recipes'",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "Boundlexx: Ingest Game Data",
                "Boundlexx: Fast Create Game Objects (Core + Skills + Recipes - English Only)"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "Boundlexx: Add Remaining Languages",
            "type": "shell",
            "command": "source <(cat ${workspaceFolder}/.local.env | grep -v '^#' | sed -E 's|^(.+)=(.*)$|export \\1=\\2|g') && python ${workspaceFolder}/manage.py create_game_objects --core",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Container: Check Status",
            "type": "shell",
            "command": "python ${workspaceFolder}/container_status.py",
            "problemMatcher": []
        },
        {
            "label": "Container: Setup Environment",
            "type": "shell",
            "command": "python ${workspaceFolder}/setup_containers.py",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "appName",
            "description": "Boundlexx App (blank for all)",
            "type": "promptString"
        },
        {
            "id": "commandName",
            "description": "Management Command",
            "type": "pickString",
            "options": [
                "shell_plus",
                "shell",
                "makesuperuser",
                "createsuperuser",
                "migrate",
                "makemigrations"
            ],
            "default": "shell_plus"
        }
    ]
}
